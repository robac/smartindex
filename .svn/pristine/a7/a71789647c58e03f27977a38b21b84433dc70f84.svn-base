.smartindex-treeview ul,
.smartindex-treeview li
{
    padding: 0;
    margin: 0;
    list-style: none;
}

.smartindex-treeview li.namespace.closed > ul
{
    display: none;
}

.smartindex-error 
{
    background-color: #F88EA0;
    display: block;
    padding: 10px;
    border: solid black 1px;    
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -khtml-border-radius: 10px;
    border-radius: 10px;
    color: black;
}

.ui-button-text
{
 padding: 3px !important;    
}



.smartindex-input-dialog
{
    font-size: 13px;
}

.smartindex-input-dialog input
{
    width: 270px;
}

.smartindex-input-dialog .ui-dialog-content
{
    padding-bottom: 1.5em;
    padding-top: 1.5em;
    padding-left: 1em;
}

.smartindex-input-dialog p
{
    margin-bottom: 0.5em;
}