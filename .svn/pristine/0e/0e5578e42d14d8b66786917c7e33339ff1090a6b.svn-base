.smartindex-treeview ul,
.smartindex-treeview li
{
    padding: 0;
    margin: 0;
    list-style: none;
}

.smartindex-treeview li
{
    margin-left: 25px;
}



.smartindex-treeview ul.closed
{
    display: none;
}

.smartindex-error 
{
    background-color: #F88EA0;
    display: block;
    padding: 10px;
    border: solid black 1px;    
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -khtml-border-radius: 10px;
    border-radius: 10px;
}

.smartindex-default li.dir-closed
{
    background-image: url("themes/default/folder.gif");
    background-repeat: no-repeat;
    padding-left: 10px;
    
}

