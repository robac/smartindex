.smartindex-dtree-theme ul
{
    line-height: 18px;
    font-family: Verdana, Geneva, Arial, Helvetica, sans-serif;
    font-size: 11px;
}

.smartindex-dtree-theme a
{
    color: rgb(51, 51, 51) !important;
}

.smartindex-dtree-theme span
{
    float: left;
    width:18px; 
    height:18px;
    display: inline-block;
    background-position: center center;
    background-repeat: no-repeat;
}

.smartindex-dtree-theme span.folderx
{
    background: url("themes/dtree/folderopen.gif");
}

.smartindex-dtree-theme span.necox
{
    background: url("themes/dtree/line.gif");
}

.smartindex-dtree-theme span.noline
{

}


.smartindex-dtree-theme span.pagex
{
    background: url("themes/dtree/page.gif");
}

.smartindex-dtree-theme li.closed > div > span.collx
{
    background: url("themes/dtree/plus.gif");
}

.smartindex-dtree-theme li.open > div > span.collx
{
    background: url("themes/dtree/minus.gif");
}


.smartindex-dtree-theme span.xxx
{
    background: url("themes/dtree/join.gif");
}

.smartindex-dtree-theme li:last-child > div > span.xxx
{
    background: url("themes/dtree/joinbottom.gif");
}

.smartindex-dtree-theme li:last-child > div > span.collx
{
    background: url("themes/dtree/plusbottom.gif");
}
