
.smartindex-treeview ul,
.smartindex-treeview li
{
    padding: 0;
    margin: 0;
    list-style: none;
}

.smartindex-treeview li.namespace.closed > ul
{
    display: none;
}

.smartindex-error 
{
    background-color: #F88EA0;
    display: block;
    padding: 10px;
    border: solid black 1px;    
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -khtml-border-radius: 10px;
    border-radius: 10px;
    color: black;
}
.smartindex-default-theme li
{
    background-repeat: no-repeat;
    padding-left: 12px;
}

.smartindex-default-theme li.namespace > a
{
    font-weight: bold;
    color: red !important;
}

.smartindex-default-theme.smartindex-highlite div:hover > a
{
    background-color: yellow !important;   
}

.smartindex-default-theme li.namespace.closed
{
    background-image: url("/lib/plugins/smartindex/themes/default/img/folder.gif");    
}

.smartindex-default-theme li.namespace.open
{
    background-image: url("/lib/plugins/smartindex/themes/default/img/folderopen.gif");    
}

.smartindex-default-theme li.page > a
{
    font-weight: normal;
}

.smartindex-default-theme li > div > a:hover
{
    text-decoration: none;
}
.smartindex-dtree-theme ul
{
    line-height: 18px;
    font-family: Verdana, Geneva, Arial, Helvetica, sans-serif;
    font-size: 11px;
}

.smartindex-dtree-theme li > div > a:active:hover:link:visited
{
    color: rgb(51, 51, 51) !important;
    text-decoration: none !important;
}

.smartindex-dtree-theme span
{
    float: left;
    width:18px; 
    height:18px;
    display: inline-block;
    background-position: center center;
    background-repeat: no-repeat;
}

.smartindex-dtree-theme li.open > div > span.folder
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/folderopen.gif");
}

.smartindex-dtree-theme li.closed > div > span.folder
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/folder.gif");
}

.smartindex-dtree-theme span.line
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/line.gif");
}

.smartindex-dtree-theme span.noline
{
}

.smartindex-dtree-theme span.file
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/page.gif");
}

.smartindex-dtree-theme li.closed > div > span.coll
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/plus.gif");
}

.smartindex-dtree-theme li.open > div > span.coll
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/minus.gif");
}

.smartindex-dtree-theme span.cross
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/join.gif");
}

.smartindex-dtree-theme li:last-child > div > span.cross
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/joinbottom.gif");
}

.smartindex-dtree-theme li.closed:last-child > div > span.coll
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/plusbottom.gif");
}

.smartindex-dtree-theme li.open:last-child > div > span.coll
{
    background: url("/lib/plugins/smartindex/themes/dtree/img/minusbottom.gif");
}
.smartindex-folder-theme 
{
    font-family: Verdana, Arial, Helvetica, sans-serif;    
    /*font-size: 1.3em;*/
    font-size: 16px;
}

.smartindex-folder-theme li > div
{
    background-repeat: no-repeat;
    padding-left: 25px;
    background-position:left center ; 
    background-repeat: no-repeat;
    cursor: pointer;
}

.smartindex-folder-theme > ul 
{
    padding-left: 0px !important;    
}

.smartindex-folder-theme li.namespace > ul
{
    padding-left: 15px !important;
}

.smartindex-folder-theme li > div
{
    /*background-size: 1em 1em;*/
}

.smartindex-folder-theme li.namespace.closed > div
{
    background-image: url("/lib/plugins/smartindex/themes/folder/img/folder-horizontal.png");    
}

.smartindex-folder-theme li.namespace.open > div
{
    background-image: url("/lib/plugins/smartindex/themes/folder/img/folder-horizontal.png");    
}

.smartindex-folder-theme li.page > div
{
    background-image: url("/lib/plugins/smartindex/themes/folder/img/document.png");    
}

.smartindex-folder-theme li.waiting > div
{
    background-image: url("/lib/plugins/smartindex/themes/folder/img/ajax-loader.gif") !important;    
}

.smartindex-folder-theme li.page > a
{
    font-weight: normal;
}

.smartindex-folder-theme li > div > a:hover 
{
    text-decoration: none;
}

.smartindex-folder-theme.smartindex-highlite div:hover > a
{
    background-color: yellow !important;   
}

.smartindex-folder-theme span.headpage
{
    background-image: url("/lib/plugins/smartindex/themes/folder/img/document.png");
    width: 16px;
    height: 16px;
    background-repeat: no-repeat;
    float: left;
}
.smartindex-simple-theme 
{
    font-family: Verdana, Arial, Helvetica, sans-serif;    
    font-size: 13px;
}

.smartindex-simple-theme li.namespace > ul
{
    padding-left: 12px !important;
}

.smartindex-simple-theme li.namespace > div
{
    background-repeat: no-repeat;
    background-position: left center;
    padding-left: 12px;
}

.smartindex-simple-theme li.namespace > div > a
{
    color: rgb(43, 115, 183) !important;
}

.smartindex-simple-theme li.page > div > a
{
    color: rgb(0, 136, 0) !important;
}


.smartindex-simple-theme.smartindex-highlite div:hover > a
{
    background-color: yellow !important;   
}

.smartindex-simple-theme li.namespace.closed > div
{
    background-image: url("/lib/plugins/smartindex/themes/simple/img/plus.gif");    
}

.smartindex-simple-theme li.namespace.open > div
{
    background-image: url("/lib/plugins/smartindex/themes/simple/img/minus.gif");    
}

.smartindex-simple-theme li.page > a
{
    font-weight: normal;
}

.smartindex-simple-theme li > div > a:hover
{
    text-decoration: none;
}