.smartindex-treeview ul,
.smartindex-treeview li
{
    padding: 0;
    margin: 0;
    list-style: none;
}

.smartindex-treeview li.namespace.closed > ul
{
    display: none;
}

.smartindex-error 
{
    background-color: #F88EA0;
    display: block;
    padding: 10px;
    border: solid black 1px;    
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -khtml-border-radius: 10px;
    border-radius: 10px;
}

.smartindex-default li
{
    background-repeat: no-repeat;
    padding-left: 12px;
}

.smartindex-default li.namespace.closed
{
    background-image: url("themes/default/folder.gif");    
    font-weight: bold;
}

.smartindex-default li.namespace.open
{
    background-image: url("themes/default/folderopen.gif");    
    font-weight: bold;
}

.smartindex-default li.namespace.closed > a
{
    font-weight: bold;
    color: red;
}

.smartindex-default li.namespace.open > a
{
    font-weight: bold;
    color: red;
}

.smartindex-default li.page > a
{
    font-weight: normal;
}

.smartindex-default li > a:hover 
{
    text-decoration: none;
}


