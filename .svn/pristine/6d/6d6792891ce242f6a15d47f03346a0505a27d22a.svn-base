<?php

class SmartIndexConf {
    //global $conf;
    
    public $namespace = "";
    public $baseDir = NULL;
    public $recursionLevel = 1;
    public $followPath = "";
    
    public $error = NULL;
    
    public function check() {
        global $conf;
        
        if (is_null($this->baseDir)) {
            $this->baseDir = $conf['datadir'];
        }
        
        if ($this->recursionLevel < 1) {
            $this->error = "Chyba recLevel";
        }
    }
    
}