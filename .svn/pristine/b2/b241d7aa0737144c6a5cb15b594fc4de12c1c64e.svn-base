function setupContext(settings) {
    var text = "<ul class=\"jeegoocontext cm_default\" id=\""+settings.id+"\">";
    jQuery.each(settings.items, function(key, value){
        text += "<li>"+value.text+"<ul><li>pokus</li><li>pokus2</li></ul></li>";
    });
    text += "</ul>";
    
    jQuery('body').append(text);
    jQuery(settings.selector).jeegoocontext(settings.id, {
        widthOverflowOffset: 0,
        heightOverflowOffset: 3,
        submenuLeftOffset: -4,
        submenuTopOffset: 0
    });
    
    jQuery('.smartindex-treeview').jeegoocontext(settings.id);
}

